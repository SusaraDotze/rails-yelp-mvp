<h1><%= @restaurant.name %></h1>
<p><strong>Address:</strong> <%= @restaurant.address %></p>
<p><strong>Phone:</strong> <%= @restaurant.phone_number %></p>
<p><strong>Category:</strong> <%= @restaurant.category.capitalize %></p>

<hr>

<h2>Reviews</h2>
<% if @restaurant.reviews.any? %>
  <ul>
    <% @restaurant.reviews.each do |review| %>
      <li>
        <strong>Rating:</strong> <%= review.rating %>/5
        <br>
        <%= review.content %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No reviews yet.</p>
<% end %>

<hr>

<h2>Leave a Review</h2>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :rating, collection: (0..5).to_a, prompt: "Select a rating" %>
  <%= f.input :content %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>

<%= link_to "Back to Restaurants", restaurants_path, class: "btn btn-secondary mt-2" %>
